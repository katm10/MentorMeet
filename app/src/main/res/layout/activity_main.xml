<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mohrapps.mentormeet.MainActivity">


        <LinearLayout
            android:id="@+id/layout_to_hide_when_asking_starting_questions"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:visibility="gone">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/feedButton"
                android:background="#a3f2f2"
                android:text=" Your Feed"
                android:textSize="50dp"
                android:typeface="normal"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/mapButton"
                android:background="#a6efa9"
                android:text=" Events"
                android:textSize="50dp"
                android:typeface="normal"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:layout_weight="1" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/mentorButton"
                android:background="#a479c7"
                android:text=" Mentor Page"
                android:textSize="50dp"
                android:typeface="normal"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:layout_weight="1" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/profileButton"
                android:background="#f581b9"
                android:text=" Your Profile"
                android:textSize="50dp"
                android:typeface="normal"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:layout_weight="1" />

        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="It seems like this is your first time using Mentor Meet. Welcome! Please answer the following questions."
            android:id="@+id/welcomeQuestionsTextView"
            android:textAlignment="center"
            android:textColor="@color/grey" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="First and Last Name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zipcode_edittext"
            android:layout_gravity="center_horizontal"
            android:hint="Zipcode" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you a mentor? Please click this if you are."
            android:id="@+id/switch_mentor"
            android:checked="false"
            android:textColor="@color/grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Please choose *5* interests."
            android:id="@+id/interestTextView"
            android:textColor="@color/grey"
            android:paddingTop="15dp" />

        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandableListViewInterests"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.37" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done!"
        android:id="@+id/btn_confirm_questions"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorLightPrimary"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
